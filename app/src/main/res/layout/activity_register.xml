<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.awesome.zhen.mylanceapp.MainActivity"
    android:background="@android:color/background_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/login_wallpaper_blur"
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="开设账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="51dp"
            android:id="@+id/textView3"
            android:textColor="@color/buttonTextColor"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:src="@mipmap/profilepic"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_person_outline_black_24dp"
                    android:id="@+id/imageView5"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/imageView6"
                    app:srcCompat="@drawable/signupbtn_background"
                    android:alpha="0.3" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColorHint="@android:color/background_light"
                    android:id="@+id/nameField1"
                    android:textColor="@color/buttonTextColor"
                    android:fontFamily="sans-serif-light"
                    android:hint="Name"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:textColorLink="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView5" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColorHint="@color/fab_material_white"
                    android:id="@+id/emailField1"
                    android:textColor="@color/buttonTextColor"
                    android:fontFamily="sans-serif-light"
                    android:hint="Email"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/imageView10"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/signupbtn_background"
                    android:id="@+id/imageView8"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email_black_24dp"
                    android:id="@+id/imageView10"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColorHint="@color/fab_material_white"
                    android:id="@+id/passwordField1"
                    android:textColor="@color/buttonTextColor"
                    android:fontFamily="sans-serif-light"
                    android:hint="Password"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/imageView9"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/signupbtn_background"
                    android:id="@+id/imageView11"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_vpn_key_black_24dp"
                    android:id="@+id/imageView9"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="19dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:text=" 注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:background="@drawable/contsignupbtn_background"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true" />

    <com.theartofdev.edmodo.cropper.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cropGuidelines="on"
        app:cropShape="oval"
        app:cropFixAspectRatio="true"
        app:cropBorderLineColor="@android:color/holo_red_dark"
        app:cropGuidelinesColor="@android:color/holo_green_dark"
        app:cropBorderLineThickness="5dp"/>


</RelativeLayout>
