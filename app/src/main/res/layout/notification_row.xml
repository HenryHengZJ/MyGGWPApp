<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/buttonTextColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/Rlayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02"
                    android:layout_marginTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userimage"
                        android:layout_width="40dp"
                        android:src="@mipmap/profilepic"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:layout_weight="0.02"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@+id/postName"
                        />

                    <TextView
                        android:text="2h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTime"
                        android:layout_marginEnd="15dp"
                        android:layout_centerVertical="false"
                        android:layout_alignParentEnd="false"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:text="Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postName"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorBlack"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/userimage" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtMessage"
                        android:layout_below="@+id/postName"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@+id/userimage"
                        android:paddingLeft="9dp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtComment"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_below="@+id/txtMessage"
                        android:layout_alignStart="@+id/txtMessage"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:textStyle="normal|italic" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cast_expanded_controller_ad_label_background_color"
            android:layout_gravity="bottom">

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>