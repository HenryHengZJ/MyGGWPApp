<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.awesome.zhen.mylanceapp.MainActivity"
    android:background="@android:color/background_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/login_wallpaper_blur"
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:alpha="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailoginBtn"
        android:background="@drawable/contsignupbtn_background"
        android:textColor="@color/buttonTextColor"
        android:layout_marginBottom="77dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@drawable/signupbtn_background"
        android:id="@+id/imageView2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:alpha="0.3"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@drawable/signupbtn_background"
        android:id="@+id/imageView3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:alpha="0.3"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_email_black_24dp"
        android:layout_marginTop="14dp"
        android:id="@+id/imageView5"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="19dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_vpn_key_black_24dp"
        android:id="@+id/imageView9"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/fab_material_white"
        android:layout_marginTop="285dp"
        android:layout_toRightOf="@+id/imageView5"
        android:id="@+id/emailField"
        android:textColor="@color/buttonTextColor"
        android:fontFamily="sans-serif-light"
        android:hint="Email"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@color/fab_material_white"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@+id/imageView9"
        android:id="@+id/passwordField"
        android:textColor="@color/buttonTextColor"
        android:fontFamily="sans-serif-light"
        android:hint="Password"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="电邮登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/textView1"
        android:textColor="@color/buttonTextColor"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light" />


</RelativeLayout>
